apache_global_vhost_settings: |
    ServerRoot "{{ server_root }}"

apache_mods_enabled:
    - authn_file.load
    - authn_core.load
    - authz_groupfile.load
    - authz_user.load
    - authz_core.load
    - auth_basic.load
    - access_compat.load
    - headers.load
    - ssl.load
    - proxy.load
    - proxy_http.load

apache_create_vhosts: True
apache_ssl_protocol: all -SSLv2 -SSLv3 -TLSv1
apache_ssl_cipher_suite: EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH
apache_vhosts_version: 2.4
apache_remove_default_vhost: True

apache_vhosts_ssl:
  - servername: "{{ inventory_hostname }}"
    certificate_file: "{{ server_root }}/conf/domain.crt"
    certificate_key_file: "{{ server_root }}/conf/domain.key"
    extra_parameters: |
        Header always set "Docker-Distribution-Api-Version" "registry/2.0"
        Header onsuccess set "Docker-Distribution-Api-Version" "registry/2.0"
        RequestHeader set X-Forwarded-Proto "https"
        ProxyRequests     off
        ProxyPreserveHost on
        ProxyPass /error/ !
        ProxyPass        /v2 http://127.0.0.1:5000/v2
        ProxyPassReverse /v2 http://127.0.0.1:5000/v2
        <Location /v2>
            Order deny,allow
            Allow from all
            AuthName "Registry Authentication"
            AuthType basic
            AuthUserFile "{{ server_root }}/conf/htpasswd"

            # Read access to authentified users
            <Limit GET HEAD>
                    Require valid-user
            </Limit>
        </Location>
